<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
    <LinearLayout android:layout_height="wrap_content" android:orientation="vertical" android:id="@+id/linearLayout1" android:layout_width="match_parent" android:padding="30dp">
        <LinearLayout android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/linearLayout2" android:orientation="vertical" android:gravity="center_horizontal">
            <Button android:layout_height="wrap_content" android:id="@+id/btnNewPost" android:layout_width="wrap_content" android:text="@string/NEW_POST" android:onClick="OnClickNewPost" android:width="120dp" android:padding="20dp"></Button>
            <Button android:layout_height="wrap_content" android:id="@+id/btnViewPost" android:layout_width="wrap_content" android:text="View Posts" android:width="120dp" android:padding="20dp" android:onClick="onClickViewPost"></Button>
        </LinearLayout>
    </LinearLayout>
    <TextView android:text="TextView" android:id="@+id/txtView1yahoo" android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
</LinearLayout>